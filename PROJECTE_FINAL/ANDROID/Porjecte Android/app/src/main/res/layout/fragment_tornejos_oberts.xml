<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.infomila.appbolos.fragment.TornejosObertsFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorPlus">

        <TextView
            android:id="@+id/txvNom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="#000000"
            android:text="Torneig"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txvModalitat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="#000000"
            android:text="Modalitat"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txvDataIni"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="#000000"
            android:text="Data"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:text="Inscriur'es"
            android:textStyle="bold"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRcvTornejosOberts"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"></android.support.v7.widget.RecyclerView>

</LinearLayout>